{
  "name": "sidenoder",
  "version": "0.3.3",
  "description": "SideNoder - oculus quest tool for sideloading, device tweaks, application managing, etc",
  "main": "main.js",
  "dependencies": {
    "@devicefarmer/adbkit": "^3.2.0",
    "adbkit-apkreader": "^3.2.0",
    "command-exists": "^1.2.9",
    "compare-versions": "^3.6.0",
    "electron-twig": "^1.1.1",
    "fix-path": "^3.0.0",
    "fs-extra": "^9.0.1",
    "jquery": "^3.5.1",
    "node-fetch": "^2.6.1",
    "web-auto-extractor": "^1.0.17"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --skip-package",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.sidenoder.app",
    "asar": true,
    "directories": {
      "output": "out"
    },
    "afterPack": "./removeLocales.js",
    "mac": {
      "target": "dir"
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "SideNoder"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./build/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        }
      ]
    }
  }
}
