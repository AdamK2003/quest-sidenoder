<div class="modal" id="installedModal" >
  <div role="document" style="margin: 1.75rem auto; min-width:800px; max-width:48%"> <!-- class="modal-dialog"  -->
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"  id="installedModalLabel">
          <div class="pull-left mt-1">
            <i class="fa fa-list"></i> Installed APP's
          </div>
          <div class="pull-right ml-4">
            <a class="btn btn-md btn-primary" onclick="openSearch()"> <i class="fa fa-search"></i> Search</a>
            <a onclick="getUpdates()" id="updateBadge" class="adbdev btn btn-info btn-md disabled"><i class="fa fa-search"></i> Check mount for updates</span></a>
          </div>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-striped table-condensed text-white">
          <tbody id="intalledTable">
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  console.log('ONLOAD installed');
  $id('processingModal').modal('show');
  ipcRenderer.send('get_installed', '');

  if (remote.getGlobal('adbDevice') && remote.getGlobal('mounted')) {
    $id('updateBadge').removeClass('disabled');
  }

</script>